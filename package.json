{
  "name": "@jbpark/use-hooks",
  "version": "2.0.0",
  "description": "A collection of reusable React 19 hooks for common UI and interaction patterns",
  "keywords": [
    "react",
    "hooks",
    "typescript",
    "react-hooks",
    "utilities",
    "custom-hooks"
  ],
  "author": "jbpark",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pjb0811/use-hooks.git"
  },
  "homepage": "https://github.com/pjb0811/use-hooks#readme",
  "bugs": {
    "url": "https://github.com/pjb0811/use-hooks/issues"
  },
  "private": false,
  "packageManager": "pnpm@10.28.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "pnpm build",
    "prepare": "husky",
    "changeset": "changeset"
  },
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.33.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.8.0",
    "prettier-plugin-classnames": "^0.8.3",
    "prettier-plugin-merge": "^0.8.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,scss,md}": "prettier --write",
    "**/*.{js,jsx,ts,tsx}": [
      "bash -c 'pnpm lint'",
      "bash -c 'tsc -b'"
    ]
  }
}
